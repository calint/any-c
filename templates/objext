//printf("%s:%u  [ %p %p ]\n",__FILE__,__LINE__,(void*)po,(void*)o);
//----------------------------------------------------------------------------


//----------------------------------------------------------------- alloc/free
inline static/*gives*/object*${name}_alloc_def(){
	object*o=object_alloc(&${name}_def);
	${name}_ext*p=malloc(sizeof(${name}_ext));
	*p=${name}_part_def;
	o->part[0]=(part*)p;
	return o;
}
